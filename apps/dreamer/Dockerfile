# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build dreamer`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t dreamer`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system dreamer && \
          adduser --system -G dreamer dreamer

COPY dist/apps/dreamer dreamer
RUN chown -R dreamer:dreamer .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix dreamer --omit=dev -f install

CMD [ "node", "dreamer" ]
